extends ../../layout/layout-ui-kit.pug

mixin colors-list(objColors = {})
  -
    const {
      objs = [
        {color: "dark-shade-100", textTop: "Dark Shade 100%", textBottom: '#1F2041'},
        {color: "dark-shade-75", textTop: "Dark Shade 75%", textBottom: '#1F2041'},
        {color: "dark-shade-50", textTop: "Dark Shade 50%", textBottom: '#1F2041'},
        {color: "dark-shade-30", textTop: "Dark Shade 30%", textBottom: '#1F2041'},
        {color: "dark-shade-10", textTop: "Dark Shade 10%", textBottom: '#1F2041'},
        {color: "dark-shade-5", textTop: "Dark Shade 5%", textBottom: '#1F2041'},
        {color: "purple", textTop: "Purple", textBottom: '#BC9CFF'},
        {color: "green", textTop: "Green", textBottom: '#6FCF97'},
      ]
    } = objColors;

  - for(let obj of objs)
    div.color-type
      div(class= `color-type__square color-type__square_color_${obj.color}`)
      div(class= `color-type__text`)
        div(class= `color-type__text-top`)= obj.textTop
        div(class= `color-type__text-bottom`)= obj.textBottom

mixin fonts-list(objFonts = {})
  -
    const {
      objs = [
        { typeText: "H1", text: 'This one is the sub-section or widget title'},
        { typeText: "H2", text: 'Next one is the item title inside widgets'},
        { typeText: "H3", text: 'This is a label or CTA text'},
        { typeText: "Body", text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.'},        
      ]
    } = objFonts;



  - for(let obj of objs)
    div.font-type
      div(class= `font-type__paragraph font-type__paragraph-type_${obj.typeText}`)= obj.typeText
      div(class= `font-type__text font-type__text-type_${obj.typeText}`)= obj.text

block title
  title Colors & Fonts 
block content
  div.color-and-fonts
    div.color-and-fonts__colors
      +colors-list()
    div.color-and-fonts__fonts
      +fonts-list()
